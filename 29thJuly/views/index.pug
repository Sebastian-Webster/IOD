html 
    head 
        title Ads Database 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
    body 
        div(class='container-fluid d-flex flex-column justify-content-center align-items-center')
            h1(style=(actionMessage && 'margin: 0px;')) Ads Database 
            if actionMessage 
                p(style=(error ? 'color: red;' : 'color: green;'))= actionMessage 
            if ads.length > 0
                div(class=rowClass)
                    for ad in ads
                        div(class='card justify-content-center align-items-center mx-2', style='border-radius: 20px;')
                            if ad.adImageURL
                                img(src=ad.adImageURL, class='card-img-top')
                            div(class='card-body')
                                h5(class='card-title')= ad.title 
                                p(class='card-text')= ad.description
                                p(class='card-text') Sold by: #{ad.seller}
                                p(class='card-text text-center') ID: #{ad._id}
                                div(class='d-flex')
                                    form(action=('editAdPage/' + ad._id), method='get')
                                        button(type='submit', class='btn btn-info mx-1') Update
                                    form(action=('http://localhost:3000/' + ad._id + '?_method=delete'), method='POST')
                                        button(type='submit', class='btn btn-danger mx-1') Delete
            
            else 
                h1 No Ads to display

            h1 Create an ad
            form(action="http://localhost/", method="post")
                input(type="text", name="title", placeholder="Ad Title")
                input(type="text", name="description", placeholder="Ad Description")
                input(type="text", name="seller", placeholder="Seller Name")
                input(type="text", name="adImageURL", placeholder="Ad Image URL")
                input(type="submit", value='Create Ad')